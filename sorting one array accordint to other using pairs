#include <iostream>
#include<bits/stdc++.h>
using namespace std;
void sortchar(int a[],char b[],int n)
{
     pair<int,char>pa[n];
     for(int i=0;i<n;i++)
     {
        pa[i]={a[i],b[i]};
     }
     sort(pa,pa+n);
     for(int i=0;i<n;i++)
     {
        cout<<pa[i].second<<" ";
     }
}
int main()
{
    int a[]={3,2,4,1};
    char b[]={'m','l','n','k'};
    int n=4;
    sortchar(a,b,n);
    return 0;
}

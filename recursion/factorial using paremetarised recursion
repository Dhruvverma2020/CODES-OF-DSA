void facts(int n,int mult)
{
    if(n<=1)
    {
        cout<<mult<<endl;
        return;
    }
    facts(n-1,mult*n);
}
int main()
{
    int n=5;
    //prints(0,n);
    //cout<<endl;
    sums(n,0);
    cout<<endl;
    cout<<add(n);
    cout<<endl;
    cout<<fact(n);
    cout<<endl;
    facts(n,1);
    
    return 0;
}
